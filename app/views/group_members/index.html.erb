<p id="notice"><%= notice %></p>

<h1>Group Members</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_members.each do |group_member| %>
      <tr>
        <td><%= group_member.group.name %></td>
        <td><%= group_member.user.email %></td>
        <td><%= link_to 'Remove', group_group_member_path(group_member.group.id,group_member.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group Member', new_group_group_member_path %>
<%= link_to 'Back', groups_path %>