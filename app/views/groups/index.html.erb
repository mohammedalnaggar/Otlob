<p id="notice"><%= notice %></p>

<h2>Groups</h2>
<p>
    <strong>Owner:</strong>
    <%= current_user.try(:email)%>
</p>


<table>
  <tr>
    <th> Name </th>

    <th colspan="2">Actions</th>
  </tr>
 
  <% @groups.each do |group| %>
    <tr>
      <td><%= group.name%>
      <td><%= link_to 'Show', group_path(group) %></td>
      <td><%= link_to 'Members ', group_group_members_path(group) %> </td>
      <td><%= link_to 'Destroy', group_path(group),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
 



