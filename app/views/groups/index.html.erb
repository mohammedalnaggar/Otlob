<p id="notice"><%= notice %></p>

<h2>Groups</h2>
<p>
    <strong>Owner:</strong>
    <%= current_user.try(:email)%>
</p>


<table>
  <tr>
    <th> Name </th>

    <th colspan="2">Actions</th>
  </tr>
 
  <% current_user.try(:groups).each do |group| %>
    <tr>
      <td><%= group.name%>
      <td><%= link_to 'Show', user_group_path(current_user.try(:id),group) %></td>
      <td><%= link_to 'Destroy', user_group_path(current_user.try(:id),group),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>




<br>

<%= link_to 'Back', root_path %>
<%= link_to 'New Group', new_group_path %>
